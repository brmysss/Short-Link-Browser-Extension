{
  "manifest_version": 3,
  "name": "Sink URL Shortener",
  "version": "1.0",
  "description": "将当前网页URL转换为短链接",
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.svg"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://s.brmys.cn/*"
  ]
} 